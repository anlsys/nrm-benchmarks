#!/bin/bash

CC=gcc

OPENBLAS=/home/xps/Work/Software/OpenBLAS/build
CFLAGS="-O2 -I$OPENBLAS/include -fopenmp"
CLIBS="-lopenblas -lm -L$OPENBLAS/lib"

CG_SOURCE="cg.c"
CG_OUTPUT="cg"

BICGSTAB_SOURCE="bicgstab.c"
BICGSTAB_OUTPUT="bicgstab"

$CC $CG_SOURCE $CFLAGS -o $CG_OUTPUT $CLIBS
$CC $BICGSTAB_SOURCE $CFLAGS -o $BICGSTAB_OUTPUT $CLIBS
